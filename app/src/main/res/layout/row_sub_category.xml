<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_margin="@dimen/_4sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="180dp"
        android:orientation="vertical"
        android:background="@drawable/round_rect1"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            android:layout_height="130dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:src="@drawable/learn"
                android:scaleType="fitXY"

                /></androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvName"
            android:singleLine="false"
            android:maxLines="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:text="Graphic design"
            android:textColor="@color/black"
            android:textDirection="locale"
            android:textSize="@dimen/_11ssp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSubName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masterclass"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp"
            android:textDirection="locale"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvInstructorname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hardy Pal"
            android:textDirection="locale"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:textColor="@color/font1"
            android:textSize="@dimen/_9ssp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_4sdp"

            >

            <TextView
                android:id="@+id/tvOldPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="500"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:textSize="@dimen/_9ssp"
                />
            <TextView
                android:id="@+id/tvNewPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="500"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginEnd="@dimen/_5sdp"
                android:textSize="@dimen/_9ssp"
                android:layout_marginStart="@dimen/_3sdp"
                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>